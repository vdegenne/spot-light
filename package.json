{
	"name": "spot-light",
	"version": "1.0.0",
	"description": "spot light custom element",
	"type": "module",
	"author": "Valentin Degenne <vdegenne@gmail.com>",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": ""
	},
	"devDependencies": {
		"@material/web": "^2.3.0",
		"@rollup/plugin-node-resolve": "^16.0.1",
		"@rollup/plugin-terser": "^0.4.4",
		"@rollup/plugin-typescript": "^12.1.2",
		"@snar/lit": "^1.6.0",
		"@tailwindcss/postcss": "^4.1.4",
		"@vdegenne/about-dialog": "^0.4.2",
		"@vdegenne/debouncer": "^1.0.3",
		"@vdegenne/material-color-helpers": "^1.11.1",
		"@vdegenne/mini-rest": "^0.1.6",
		"@vdegenne/rollup-plugin-minify-html": "^1.0.6",
		"custom-element-decorator": "^0.6.0",
		"html-vision": "^0.3.2",
		"lit": "^3.3.0",
		"lit-with-styles": "^2.1.3",
		"material-3-prompt-dialog": "^1.0.1",
		"material-shell": "^1.2.7",
		"rollup": "^4.40.0",
		"rollup-plugin-material-all": "^1.2.2",
		"rollup-plugin-minify-template-literals": "^1.1.7",
		"snar": "^2.2.0",
		"snar-save-to-local-storage": "^1.0.1",
		"tailwindcss": "^4.1.4",
		"toastit": "^2.1.3",
		"typescript": "^5.8.3",
		"vite": "^6.3.3",
		"vite-plugin-mdicon2svg": "^0.1.0",
		"vscode-ui-connector": "^0.2.4",
		"wireit": "^0.14.12"
	},
	"scripts": {
		"dev": "wireit",
		"build": "wireit",
		"build:ts": "wireit",
		"build:vite": "wireit"
	},
	"wireit": {
		"dev": {
			"service": true,
			"command": "vite --host",
			"dependencies": [
				"vuc"
			]
		},
		"build": {
			"dependencies": [
				"build:vite",
				"build:ts"
			]
		},
		"build:ts": {
			"command": "rollup -c",
			"files": [
				"./tsconfig.json",
				"./rollup.config.js",
				"./src/spot-light.ts"
			],
			"output": [
				"./lib/spot-light.js"
			]
		},
		"build:vite": {
			"command": "vite build",
			"files": [
				"./vite.config.ts",
				"./src",
				"./index.html",
				"./public"
			],
			"output": []
		},
		"vuc": {
			"service": true,
			"command": "vuc",
			"files": [
				"./.vuc.json"
			]
		}
	}
}
